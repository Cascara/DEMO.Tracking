@{
    IConfiguration configuration = ViewBag.Configuration;
    ActivityInstance activityInstance = ViewBag.ActivityInstance;
}

<div id="quickview" class="quickview-wrapper" data-pages="quickview">
    <div class="view-port clearfix" id="chat">
        <div class="view chat-view bg-white clearfix">
            <div class="navbar navbar-default">
                <div class="navbar-inner">
                    <a class="link text-master inline action p-l-10 p-r-10" data-toggle-element="#quickview" data-toggle="quickview">
                        <i class="fa fa-close" style="cursor: pointer;"></i>
                    </a>
                    <div class="view-heading">
                        Comentarios
                    </div>
                    <a id="procedureLog" class="inline action p-r-10 pull-right link text-master">
                        <i class="fa fa-plus" style="cursor: pointer;"></i>
                    </a>
                </div>
            </div>
            <div class="chat-inner" id="conversation">
            </div>
            @if (activityInstance.ActionButtons.Count > 0)
            {
                <div class="b-t b-grey bg-white clearfix p-l-10 p-r-10">
                    <div class="row">
                        <div class="col-lg-12 no-padding">
                            <input id="comment" type="text" class="form-control chat-input" placeholder="Escribir comentario" @*style="width: 310px; padding-left: 20px;" *@>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div id="divModalActivities" class="modal fade" role="dialog" style="overflow-y: scroll;" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Trámite: <span id="ProcedureKey"></span></h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="col-md-12">
                            <table id="dtuActivities" class="table table-stripped table-bordered">
                                <thead>
                                    <tr role="row">
                                        <th></th>
                                        <th>Actividad</th>
                                        <th>Responsable</th>
                                        <th>Inició</th>
                                        <th>Terminó</th>
                                        <th>Duración</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<script src="@configuration["WebFramework"]/undani/plugins/quickview/quickview.js?v=0.0.1"></script>
<script src="~/js/conversation.js?v=0.0.2"></script>